<div class="container p-3">
    <h1 class="display-2 text-center mb-3">Eat The Burger</h1>

    <div class="row">
        <div class="col-10 col-lg-3 mb-4">
            <div class="row">
                <div class="col-9">
                    <h2 class="mb-3">{{title}} Burger:</h2>

                    <form action="{{action}}" method="POST">
                        <div class="form-group py-2 mb-3">
                            <label for="burger_name">Burger name</label>
                            <input type="hidden" name="id" value="{{id}}">
                            <input type="text" class="form-control" id="burger_name" name="name" value="{{name}}" required>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-info" id="button_submit" title="Click to submit.">Enter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-10 col-lg-3 mb-4">
            <h2 class="mb-5">Yet to be Eaten:</h2>

            {{#each burgers}}
                {{#unless this.devoured}}
                    <div class="row mb-2 burgers">
                        <div class="col-11 col-lg-10">
                            <form action="/{{this.id}}/1?_method=PATCH" method="POST">
                                <input type="hidden" name="name" value="{{this.name}}">
                                <button type="submit" class="btn btn-warning burgers_not_devoured" title="Click to eat {{this.name}}">{{this.name}}</button>
                            </form>
                        </div>

                        <div class="col-1 col-lg-1">
                            <form action="/{{this.id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-link" title="Click to delete  {{this.name}} burger."><i class="fa fa-times" aria-hidden="true"></i></button>
                            </form>

                        </div>
                    </div>
                {{/unless}}
            {{/each}}
        </div>

        <div class="col-10 col-lg-3 mb-4">
            <h2 class="mb-5">Eaten:</h2>

            {{#each burgers}}
                {{#if this.devoured}}
                    <div class="row mb-2 burgers">
                        <div class="col-11 col-lg-10">
                            <button type="button" class="btn btn-success burgers_devoured">{{this.name}}</button>
                        </div>

                        <div class="col-1 col-lg-1">
                            <form action="/{{this.id}}?_method=DELETE" method="POST">
                                <button type="submit" class="btn btn-link" title="Click to delete  {{this.name}}"><i class="fa fa-times" aria-hidden="true"></i></button>
                            </form>
                        </div>
                    </div>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>